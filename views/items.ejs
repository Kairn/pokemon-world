      <div class="container">
        <div style="height: 5px;"></div>
        <table>
          <tbody>
            <% itemsData['standard-balls'].forEach(function(item) { %>
              <tr>
                <td class="item-picture"><img width="60" height="60" src="<%= item['spriteUrl'] %>" alt="<% item['id'] %>"></td>
                <td class="item-name"><%= item['name'] %></td>
